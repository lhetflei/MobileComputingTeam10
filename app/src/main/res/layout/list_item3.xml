<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listed_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:orientation="horizontal"
    android:textColor = "?android:textColorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_image"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="4dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="@color/black"
        app:civ_border_width="3px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/customborder2"
        android:drawableStart="@drawable/ic_baseline_person_pin_24"
        android:drawablePadding="-20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Preis pro Tag"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:layout_marginTop="8dp"
        android:text="Klaus"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_title" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/customborder2"
        android:drawableStart="@drawable/ic_baseline_description_24"
        android:drawablePadding="-20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Gegenstand"
        android:layout_marginTop="12dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:text="Haus"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_image" />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/customborder2"
        android:drawableStart="@drawable/ic_baseline_euro_24"
        android:drawablePadding="-20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Preis pro Tag"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:text="50"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_price"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>